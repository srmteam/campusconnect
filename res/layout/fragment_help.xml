<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8E1">
<LinearLayout 
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    
      >
      <TextView 
           android:layout_width="60dp"
         android:layout_height="60dp" 
          
          android:padding="4dp"
         android:layout_margin="4dp"
          android:id="@+id/tx9"
          android:textColor="#424242"
         android:textSize="18sp"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:text="FAQ"
         android:textStyle="bold"
         android:layout_gravity="center_horizontal"
          
          />
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="60dp" 
         android:layout_gravity="center"
         android:id="@+id/tx1"
         android:padding="4dp"
         android:layout_margin="3dp"
         android:background="#01579B"
         android:text="How Does the SRMBuzz App work ?"
         android:textColor="#fff"
         android:textSize="18sp"
         android:textAppearance="?android:attr/textAppearanceLarge"
        
         />
      <TextView 
         android:layout_width="match_parent"
         android:layout_height="60dp" 
         android:layout_gravity="center"
         android:id="@+id/tx2"
         android:padding="4dp"
         android:layout_margin="4dp"
         android:background="#01579B"
         android:text="What is EVENT Tab in a club home for ?"
         android:textColor="#fff"
         android:textSize="18sp"
         android:textAppearance="?android:attr/textAppearanceLarge"
         
         />
       <TextView 
         android:layout_width="match_parent"
         android:layout_height="60dp" 
         android:layout_gravity="center"
         android:id="@+id/tx3"
         android:padding="4dp"
         android:layout_margin="4dp"
         android:background="#01579B"
         android:text="What is TEAM INFORMATION Tab in a club home for ?"
         android:textColor="#fff"
         android:textSize="18sp"
         android:textAppearance="?android:attr/textAppearanceLarge"
         
         />
        <TextView 
         android:layout_width="match_parent"
         android:layout_height="60dp" 
         android:layout_gravity="center"
         android:id="@+id/tx4"
         android:padding="4dp"
         android:layout_margin="4dp"
         android:background="#01579B"
         android:text="What is REGISTRATION FORM Tab in club home for?"
         android:textColor="#fff"
         android:textSize="18sp"
         android:textAppearance="?android:attr/textAppearanceLarge"
         
         />
         <TextView 
         android:layout_width="match_parent"
         android:layout_height="60dp" 
         android:layout_gravity="center"
         android:id="@+id/tx5"
         android:padding="4dp"
         android:layout_margin="4dp"
         android:background="#01579B"
         android:text="What is FEEDBACK Tab in club home for ?"
         android:textColor="#fff"
         android:textSize="18sp"
         android:textAppearance="?android:attr/textAppearanceLarge"
         
         />
          
         <Button 
             android:layout_width="wrap_content"
         android:layout_height="60dp" 
         android:layout_gravity="center"
         android:id="@+id/bt1"
         android:padding="4dp"
         android:layout_margin="4dp"
         android:background="#01579B"
         android:text="  Contact Us for Help !  "
         android:textColor="#fff"
         android:textSize="18sp"
         android:textAppearance="?android:attr/textAppearanceLarge"
                      android:layout_marginTop="5dp"
             
             />
    
     
   
</LinearLayout> 
</ScrollView>